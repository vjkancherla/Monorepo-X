#Custom Jenkins Image with Kubectl, Helm and Buildah tools installed.
#This image will be used to run Jenkins on Docker.

FROM jenkins/jenkins:lts

USER root

# Update system packages and install prerequisites
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y apt-transport-https software-properties-common sudo

# Install Buildah
RUN echo "deb https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/Debian_10/ /" > /etc/apt/sources.list.d/devel:kubic:libcontainers:stable.list && \
    curl -L "https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/Debian_10/Release.key" | apt-key add - && \
    apt-get update && \
    apt-get -y install buildah

# Give Jenkins user sudo permissions
RUN echo "jenkins ALL=NOPASSWD: ALL" >> /etc/sudoers

# Ensure jenkins user owns the Buildah storage directory
RUN mkdir -p /var/jenkins_home/.local/share/containers/storage && chown -R jenkins:jenkins /var/jenkins_home/.local/share/containers/storage

# Install kubectl
RUN curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl" && \
    chmod +x kubectl && \
    mv kubectl /usr/local/bin/

# Install helm
RUN curl -fsSL -o get_helm.sh https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3 && \
    chmod 700 get_helm.sh && \
    ./get_helm.sh

# Clean up
RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

USER jenkins
